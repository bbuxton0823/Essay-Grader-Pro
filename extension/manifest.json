{
  "manifest_version": 3,
  "name": "Writing Assistant Pro",
  "description": "Personal writing analysis and feedback tool",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "*://*.schoology.com/*",
    "*://classroom.google.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.schoology.com/*"],
      "js": ["content-scripts/schoology.js"],
      "css": ["content-scripts/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://classroom.google.com/*"],
      "js": ["content-scripts/classroom.js"],
      "css": ["content-scripts/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "grade-essay": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Grade the current essay"
    }
  }
}
